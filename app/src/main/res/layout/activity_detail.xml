<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="8dp">

<TextView
    android:id="@+id/tv_todays_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text="Saturday, October 1"/>

<TextView
    android:id="@+id/tv_todays_weather_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text="Sunny"/>

<TextView
    android:id="@+id/tv_todays_high_temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text="78°"/>

<TextView
    android:id="@+id/tv_todays_low_temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text="63°"/>

<TextView
    android:id="@+id/tv_todays_humidity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text="50%"/>

<TextView
    android:id="@+id/tv_todays_pressure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text=""/>

<TextView
    android:id="@+id/tv_todays_wind_speed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    tools:text="NE 10 mph"/>

</LinearLayout>
